{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es2016",
    "allowJs": false,      
    "module": "commonjs", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "buildOptions": {}
}
